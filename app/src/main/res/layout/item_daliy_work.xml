<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/monthly_work_item_height"
    android:background="@drawable/custom_ripple">

    <TextView
        android:id="@+id/day_textView"
        android:layout_width="@dimen/zero_width"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:gravity="center"
        android:textColor="@color/text_color_on_background"
        android:ellipsize="none"
        android:singleLine="true"
        android:background="@drawable/worksheet_border_line"
        app:autoSizeTextType="uniform"
        app:autoSizeMaxTextSize="@dimen/default_font_size"
        tools:text="01" />

    <TextView
        android:id="@+id/week_textView"
        android:layout_width="@dimen/zero_width"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:textColor="@color/text_color_on_background"
        android:ellipsize="none"
        android:singleLine="true"
        android:paddingHorizontal="@dimen/month_worksheet_padding"
        android:background="@drawable/worksheet_border_line"
        app:autoSizeTextType="uniform"
        app:autoSizeMaxTextSize="@dimen/default_font_size"
        tools:text="æœˆ" />

    <TextView
        android:id="@+id/workFlag_textView"
        android:layout_width="@dimen/zero_width"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:gravity="center"
        android:textColor="@color/text_color_on_background"
        android:ellipsize="none"
        android:singleLine="true"
        android:paddingHorizontal="@dimen/month_worksheet_padding"
        android:background="@drawable/worksheet_border_line"
        app:autoSizeTextType="uniform"
        app:autoSizeMaxTextSize="@dimen/default_font_size"
        tools:text="O" />

    <TextView
        android:id="@+id/startWork_textView"
        android:layout_width="@dimen/zero_width"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center"
        android:textColor="@color/text_color_on_background"
        android:paddingHorizontal="@dimen/month_worksheet_padding"
        android:background="@drawable/worksheet_border_line"
        app:autoSizeTextType="uniform"
        app:autoSizeMaxTextSize="@dimen/default_font_size"
        tools:text="09:00" />

    <TextView
        android:id="@+id/endWork_textView"
        android:layout_width="@dimen/zero_width"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center"
        android:textColor="@color/text_color_on_background"
        android:paddingHorizontal="@dimen/month_worksheet_padding"
        android:background="@drawable/worksheet_border_line"
        app:autoSizeTextType="uniform"
        app:autoSizeMaxTextSize="@dimen/default_font_size"
        tools:text="18:00" />

    <TextView
        android:id="@+id/breakTime_textView"
        android:layout_width="@dimen/zero_width"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center"
        android:textColor="@color/text_color_on_background"
        android:paddingHorizontal="@dimen/month_worksheet_padding"
        android:background="@drawable/worksheet_border_line"
        app:autoSizeTextType="uniform"
        app:autoSizeMaxTextSize="@dimen/default_font_size"
        tools:text="01:00" />

    <TextView
        android:id="@+id/workTime_textView"
        android:layout_width="@dimen/zero_width"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center"
        android:textColor="@color/text_color_on_background"
        android:paddingHorizontal="@dimen/month_worksheet_padding"
        android:background="@drawable/worksheet_border_line"
        app:autoSizeTextType="uniform"
        app:autoSizeMaxTextSize="@dimen/default_font_size"
        tools:text="08:00" />

    <TextView
        android:id="@+id/note_textView"
        android:layout_width="@dimen/zero_width"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center"
        android:textColor="@color/text_color_on_background"
        android:maxLines="1"
        android:maxLength="10"
        android:ellipsize="end"
        android:paddingHorizontal="@dimen/month_worksheet_padding"
        android:background="@drawable/worksheet_border_line" />

</LinearLayout>